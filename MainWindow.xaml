<Window x:Class="RealRandomWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealRandomWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="550" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="Top" Grid.RowSpan="1" MouseLeftButtonDown="Top_MouseLeftButtonDown">
            <Grid.Background>
                <ImageBrush ImageSource="Resurs/Background.jpg" Stretch="UniformToFill" ></ImageBrush>
            </Grid.Background>
            <Button x:Name="Button_Exit" Style="{StaticResource Button_Exit}"  Click="Button_Exit_Click" MouseEnter="Button_Exit_MouseEnter" MouseLeave="Button_Exit_MouseLeave" >
                <StackPanel>
                    <Image x:Name="Image_Exit" Visibility="Visible" Source="Resurs/Exit.png" Width="50"/>
                </StackPanel>
            </Button>
            <TextBlock x:Name="NameBlock" Style="{StaticResource Name_Block}" Text="RealRandom"  />
        </Grid>
        <Grid x:Name="Base" Grid.Row="2">
            
        </Grid>

    </Grid>
</Window>
